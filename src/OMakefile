########################################################################
# The standard OMakefile.
# You will usually need to modify this file for your project.

########################################################################
# Phony targets are scoped, so you probably want to declare them first.
#
open MyUtil

.PHONY: lib install clean spec

########################################################################
# Subdirectories.
# You may want to include some subdirectories in this project.
# If so, define the subdirectory targets and uncomment this section.
#

# .SUBDIRS:

################################################
# Configuration.  You may want to modify any of these configuration
# variables.
#

#
# This project requires ocamlfind (default - false).
#
USE_OCAMLFIND = true
#
OCAMLPACKS[] =
	camlp4.extend
	camlp4.quotations.o
	compiler-libs.toplevel
	findlib
#
if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

#
# Include path
#
OCAMLINCLUDES += 

OCAMLFINDFLAGS = -syntax camlp4o 

#
# Compile native or byte code?
#
# The default values are defined as follows:
#
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
BYTE_ENABLED = true
#
# Various options
#
OCAMLFLAGS += -g -annot -bin-annot 
# OCAMLCFLAGS   +=
# OCAMLOPTFLAGS += -annot -bin-annot
OCAML_LINK_FLAGS += -linkall 
OCAML_BYTE_LINK_FLAGS += -linkall dynlink.cma camlp4o.cma 
# OCAML_NATIVE_LINK_FLAGS +=

################################################
# Build an OCaml library
#

FILES[] =
	spec
	specFormat
	pa_spec
	run_simplespec
#
PACKAGE = simplespec
#
# pa_spec以外をパッケージにする
MyOCamlPackage($(PACKAGE), $(FILES), $(EMPTY), -linkall, false)
MyOCamlLibrary($(LIB), pa_spec)

lib: $(OCamlPackageGeneratedFiles $(PACKAGE), false) pa_spec.cmo

SIMPLESPEC_FILES[] =
	simplespec

spec: $(OCamlProgramOnlyByte simplespec, $(FILES))

INSTALL_FILES[] = $(array $(addsuffix .cmo, $(FILES)))
INSTALL_FILES += $(OCamlPackageGeneratedFiles $(PACKAGE), false) 

OCamlInstallPackage($(PACKAGE), $(INSTALL_FILES))

.DEFAULT: lib spec
